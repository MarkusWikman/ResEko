<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResEko</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/redovisning.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav>
            <div class="header-container">
                <div class="ResEkoStyle">
                    <a asp-area="" asp-controller="Home" asp-action="Index">ResEko</a>
                </div>
                <div class="socialamedier">
                    <a asp-controller="Home" asp-action="Konsultation" type="button" class="Kontaktaoss">Kontakt</a>
                    ||
                    <a asp-area="" asp-controller="Home" asp-action="About">Om oss</a>
                    @*<a href="https://www.linkedin.com/in/m%C3%A5ns-wikman-a66290257/"><img class="linkedin" src="~/images/li-in-bug.png" /> </a>*@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <hr style="position:sticky;" />
        <div class="container footerStyle">
            <div class="footer-section">
                <h5>Adress</h5>
                <p>Solnavägen 20</p>
                <p>112 48 Solna</p>
            </div>
            <div class="footer-section">
                <h5>Info</h5>
                <p>Innehar F-skattebevis</p>
            </div>
            <div class="footer-section">
                <h5>Bankgiro</h5>
                <p>474-1831</p>
            </div>
            <div class="footer-section">
                <h5>E-post</h5>
                <p>Info@ResEko.se</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
